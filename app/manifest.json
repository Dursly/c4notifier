{
  "name": "C4Notifier",
  "version": "1.3.2",
  
  "manifest_version": 2,
  "default_locale": "en",
  
  "icons": {"128": "icon.png"},
  
  "offline_enabled": false,

  "app": {
    "background": {
      "scripts": ["background.js"]      
    }
  },
  "permissions": [
    "http://*/*",
    "storage",
    "notifications"
  ]
}
